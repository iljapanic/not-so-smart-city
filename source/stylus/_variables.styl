// typography
$root-size = 13px;
$root-size-desktop = 19px;
$base-size = 1.4rem
$base-line-height = 2rem

$h1-size = 3.2rem
$h2-size = 2.2rem
$h3-size = 1.7rem

$font-large = 1.8rem
$font-small = 1rem

$sans-base = 1rem
$sans-small = 0.8rem
$sans-large = 1.2rem

$letter-spacing = .03em

$fw-base = 200
$fw-medium = 500
$fw-bold = 600
$fw-sans = 300
$fw-sans-bold = 600

$serif-fallback = Palatino, 'Palatino Linotype', 'Palatino LT STD', 'Book Antiqua', Georgia, serif
$sans-serif-fallback = 'Gill Sans MT', Calibri, sans-serif

$serif = 'Monotype Garamond W01', et-book, $serif-fallback
$sans = 'Avenir Next W01','Freight Sans W01', $sans-serif-fallback
$monospace = 'Input Mono', 'Source Code Pro', 'Monaco', monospace


// sizing
$header = 54em
$main = 46em
$paragraph = 46em
$spacing = 2rem


// colors
$site-color = #C0392B
$text-color = #000207
$bg-color = #ffffff

$gray-light = #f8f8f8
$gray-medium = #eee
$gray-dark = #5f5f5f
$gray = #999999

$selection = rgba(255, 255, 0, 0.25)

$twitter = #1dcaff
$linkedin = #007bb5
$instagram = #cd486b
$github = #171515
$rss = #f26522


// media queries
$bp-s = 40em // max
$bp-m = 50em // min
$bp-l = 64em // min
$bp-xl = 90em // min


// animation
$quad-easing = cubic-bezier(0.455, 0.030, 0.515, 0.955)
