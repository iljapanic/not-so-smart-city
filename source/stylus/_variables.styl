// typography
$base-font-size = 24 // in px
$base-line-height = 1.55
$leading = $base-line-height * 1rem
$scale = 1.125

$h1-size = (1.35 * $scale * 1rem)
$h1-line-height = (1.5 * $leading)

$h2-size = (1.25 * $scale * 1rem)
$h2-line-height = (1 * $leading)

$h3-size = 1 * $scale * 1rem

$h4-size = ($scale / 2) * 1rem

$letter-spacing = .03rem

$fw-base = 200
$fw-medium = 500
$fw-bold = 600
$fw-sans = 300
$fw-sans-bold = 600


$serif = 'ET-Book', Palatino, 'Palatino Linotype', 'Palatino LT STD', 'Book Antiqua', Georgia, serif
$sans = 'Lato','Gill Sans', 'Gill Sans MT', Calibri, sans-serif



// sizing
$wrap = 52em
$header = $wrap
$main = 34em
$paragraph = 46em
$spacing = $leading


// colors
$site-color = #C0392B
$text-color = #000207
$bg-color = #ffffff

$gray-light = #f8f8f8
$gray-medium = #eee
$gray-dark = #5f5f5f
$gray = #999999

$selection = rgba(255, 255, 0, 0.25)

$twitter = #1dcaff
$linkedin = #007bb5
$instagram = #cd486b
$github = #171515
$rss = #f26522


// media queries
$bp-s = 40em // max
$bp-m = 50em // min
$bp-l = 64em // min
$bp-xl = 90em // min


// misc.
$quad-easing = cubic-bezier(0.455, 0.030, 0.515, 0.955)
$separator = 1px solid $gray-medium
