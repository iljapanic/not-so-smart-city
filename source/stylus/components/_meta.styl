.abstract p
	font-size 1.1rem
	line-height 1.45
	margin-top 0
	+large()
		font-size 1.2rem
		line-height 1.55

.keywords
	margin-top $spacing*0.75
	font-size 0.9rem
	line-height 1.75
	font-style italic
	+large()
		font-size 1.1rem
		line-height 1.5

.meta
	margin-top $spacing*1.5
	padding $spacing*0.75 0
	font-family $sans
	border-top $separator
	border-bottom $separator

	table
		margin 0
		width 100%

	thead
		+small()
			hidden()

	th
		text-align left
		letter-spacing $letter-spacing
		color $gray
		font-size 0.55rem
		font-weight bold
		text-transform uppercase

	tr
		+small()
			display flex
			flex-wrap wrap

	td
		vertical-align top
		font-size 0.7rem
		line-height 1.5

		+small()
			display block
			margin-bottom $spacing
			&:nth-of-type(1)
				order 1
				width 60%
			&:nth-of-type(2)
				order 3
				width 60%
			&:nth-of-type(3)
				order 5
				width 60%
				margin-bottom 0
			&:nth-of-type(4)
				order 2
				width 40%
			&:nth-of-type(5)
				order 4
				width 40%
			&:before
				display block
				margin-bottom $spacing*0.15
				content attr(data-label)
				letter-spacing $letter-spacing
				color $gray
				font-size 0.55rem
				font-weight bold
				text-transform uppercase

		+medium()
			width 18%
			display table-cell

	td:nth-of-type(1)
		+medium()
			width 18%

	td:nth-of-type(2)
		+medium()
			width 28%


.meta .authors,
.meta .organizations
	list-style-type none
	margin 0
	padding 0
	a
		text-decoration none
	li
		margin 0
		line-height 1.75
